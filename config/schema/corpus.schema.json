{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "语言库自动回复",
	"description": "一个语言库",
	"definitions": {
		"regexp": {
			"type": "string",
			"description": "正则匹配,注入语言选择:JSRegexp",
			"default": "",
			"format": "regex"
		},
		"MSG": {
			"type": "string",
			"description": "字符串格式消息段",
			"pattern": "^(\\[(CQ:\\w+(,\\w+=[^,\\]]+)*|FN:\\w+\\.\\w+)\\]|[^\\[]*)+$",
			"default": ""
		},
		"CQ": {
			"type": "string",
			"description": "字符串格式消息段",
			"pattern": "^(\\[CQ:\\w+(,\\w+=[^,\\]]+)+\\]|[^\\[]+)+$",
			"default": null
		}
	},
	"type": "object",
	"properties": {
		"$schema": {
			"type": "string",
			"format": "uri"
		},
		"corpora": {
			"description": "语料库",
			"type": "array",
			"items": {
				"properties": {
					"name": {
						"type": "string",
						"description": "名称兼职帮助"
					},
					"regexp": {
						"$ref": "#/definitions/regexp"
					},
					"reply": {
						"$ref": "#/definitions/MSG"
					},
					"forward": {
						"type": "boolean",
						"description": "是否为合并转发消息,默认为false",
						"default": true
					},
					"needAdmin": {
						"type": "boolean",
						"description": "是否需要管理员,默认为false",
						"default": true
					},
					"isOpen": {
						"type": "boolean",
						"description": "是否开启,默认为true",
						"default": false
					},
					"delMSG": {
						"type": "number",
						"description": "秒为单位,默认为0"
					},
					"canPrivate": {
						"type": "boolean",
						"description": "私聊可用,默认为true",
						"default": false
					},
					"canGroup": {
						"type": "boolean",
						"description": "群聊可用,默认为true",
						"default": false
					},
					"help": {
						"type": "string",
						"description": "帮助文本",
						"default": null
					},
					"minLength": {
						"type": "number",
						"description": "目标文本的最小长度, 不够时跳过 regexp 匹配",
						"default": 0
					},
					"maxLength": {
						"type": "number",
						"description": "目标文本的最大长度, 超出时跳过 regexp 匹配",
						"default": 100
					},
					"limitTime": {
						"type": "number",
						"description": "限制时间, 单位秒",
						"default": 0
					}
				},
				"required": ["name", "regexp"],
				"additionalProperties": false
			}
		},
		"additionalProperties": false
	}
}
